{
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": "webpack"
  },
  "parser": "babel-eslint",
  // "extends": "plugin:prettier/recommended",
  "rules": {
    // "prettier/prettier": 2,
    "react-hooks/rules-of-hooks": 2,
    // "strict": [2, "never"], ?
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2
  },
  "plugins": ["react", "react-hooks"]
}